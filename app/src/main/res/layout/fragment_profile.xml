<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="62dp"
        android:text="My profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="68dp"
        android:layout_height="57dp"
        android:layout_below="@+id/profileTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/UserName"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_below="@+id/profileTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="110dp"
        android:text="user name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/userDescription"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_below="@+id/UserName"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/userItemPager"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_below="@+id/userItemTitle"
        android:layout_marginTop="13dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/addNewItem"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_above="@+id/userItemPager"
        android:layout_below="@+id/userDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-110dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="-8dp"
        android:text="Add item" />

    <TextView
        android:id="@+id/userItemTitle"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="135dp"
        android:text="Your saved Items:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>