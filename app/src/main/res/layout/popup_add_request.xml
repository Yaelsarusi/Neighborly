<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/found_neighbors"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hi {user}, we found neighbors that have the item you were looking for!"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/start_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="press to start a privet chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share a new request" />
    </LinearLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="100pt"
        android:text="Send"
        android:textColor="@color/white" />

</LinearLayout>