<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/intro"
            style="@style/TextColor"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/we_found_neighbors"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/startChat"
            style="@style/TextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:text="@string/start_private_chat_title" />

        <ListView
            android:id="@+id/foundNeighbors"
            android:layout_width="311dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginTop="5pt"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newRequestTitle"
            style="@style/TextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_a_new_request_title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/frame_narrow"
        android:padding="5dp">

        <EditText
            android:id="@+id/editRequestMessage"
            android:layout_width="291dp"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@+id/send"
            android:background="@android:color/transparent"
            style="@style/TextColor"
            android:hint="@string/neighborly_send_help_message" />

        <ImageButton
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:background="@color/fui_transparent"
            android:src="@drawable/send" />

    </RelativeLayout>

</LinearLayout>