<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/appBlue"
    android:orientation="vertical"
    android:padding="5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginBottom="-30dp"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/appBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hello"
            style="@style/TextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/intro"
            style="@style/TextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/found_neighbors"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ListView
            android:id="@+id/foundNeighbors"
            android:layout_width="311dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginTop="5pt"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:orientation="vertical">

        <Button
            android:id="@+id/newRequestButton"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_yellow"
            android:layout_gravity="center_horizontal"
            android:text="@string/share_a_new_request_title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/createNewRequest"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/editRequestMessage"
            style="@style/TextColor"
            android:layout_width="291dp"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@+id/send"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/green"
            android:hint="@string/neighborly_send_help_message"
            android:textCursorDrawable="@drawable/cursor_color" />

        <ImageButton
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:background="@color/fui_transparent"
            android:src="@drawable/send" />

    </RelativeLayout>

</LinearLayout>