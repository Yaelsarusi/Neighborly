<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/neighborBadges"
        style="@style/TextColor"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="vertical"
        android:translationZ="5dp"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexWrap="wrap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_yellow"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/neighborsPic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:contentDescription="@string/neighbor_picture"
            android:src="@drawable/profile"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/neighborName"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/neighbors"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/neighborDesc"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/neighbors" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>