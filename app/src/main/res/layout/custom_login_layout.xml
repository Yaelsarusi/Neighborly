<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appYellow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        style="@style/TextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/welcome"
        android:textAllCaps="false"
        android:textColor="@color/appBlack"
        android:textSize="37sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSignUp"
        style="@style/TextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textColor="@color/appBlack"
        android:textSize="37sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutLoginOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <RelativeLayout
        android:id="@+id/relativeLayoutLoginOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignUp">

        <ImageButton
            android:id="@+id/imageButtonFacebook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/imageButtonGoogle"
            android:background="@drawable/facebook_icon"
            android:padding="15dp" />

        <ImageButton
            android:id="@+id/imageButtonGoogle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/google_icon"
            android:padding="15dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>